<%layout('layouts/boilerplate')%>
<h1>Register</h1>
<form class="needs-validation" action="/users" method="POST" novalidate>
  <label class="form-label" for="username">Username</label>
  <input name="user[username]" id="username" class="form-control" type="text" required>
  <label class="form-label" for="username">Password</label>
  <input name="user[password]" id="username" class="form-control" type="password" required>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
