<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-4 offset-4">
    <h3>Log in</h3>
    <form class="needs-validation" action="/users/login" method="POST" novalidate>
      <div class="form-floating mb-2">
        <input name="username" id="username" class="form-control" type="text" placeholder="username" required>
        <label for="username">Username</label>
      </div>
      <div class="form-floating mb-2">
        <input name="password" id="username" class="form-control" type="password" placeholder="password" required>
        <label for="username">Password</label>
      </div>
      <div class="mb-2 d-flex w-100">
        <a class="d-block" href="#">Forgot Password?</a>
        <a class="d-block ms-auto" href="/users/register">Register</a>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
